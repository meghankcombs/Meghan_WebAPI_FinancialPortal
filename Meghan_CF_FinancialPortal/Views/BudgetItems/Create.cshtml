@model Meghan_CF_FinancialPortal.Models.BudgetItem

<div class="page-header">
    <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-android-checkbox-outline"></i>Budget Items / </span>Create</h1>
</div>
<div class="panel">
    <div class="panel-heading">
        <div class="panel-title">New Budget Item</div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <fieldset class="form-group">
            <label for="form-group-input-1">Budget</label>
            @Html.DropDownList("BudgetId", null, htmlAttributes: new { @class = "form-control" })
        </fieldset>
        <fieldset class="form-group">
            <label for="form-group-input-1">Category</label>
            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
        </fieldset>
        <fieldset class="form-group">
            <label for="form-group-input-1">Amount</label>
            <input type="number" class="form-control" name="Name" placeholder="Amount of budget item">
        </fieldset>
        <fieldset class="form-group text-right">
            <button type="submit" class="btn btn-primary">Save</button>
        </fieldset>
    }
</div>
