@model Meghan_CF_FinancialPortal.Models.ViewModels.HouseholdViewModel

@if (Model.IsJoinHouse)
{
    <div class="page-header">
        <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-android-checkbox-outline"></i>Household / </span>Join</h1>
    </div>
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">Welcome to @Model.HouseholdName</div>
        </div>
        @using (Html.BeginForm("JoinHousehold", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.HouseholdId)
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary">Join</button>
            </fieldset>
        }
    </div>
}

else
{
    <div class="page-header">
        <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-android-checkbox-outline"></i>Household / </span>Create</h1>
    </div>
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">New Household</div>
        </div>
        @using (Html.BeginForm("CreateHousehold", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <fieldset class="form-group">
                <label for="form-group-input-1">Name</label>
                <input type="text" class="form-control" name="Name" placeholder="Name of household...">
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary">Create</button>
            </fieldset>
        }
    </div>
}
